<?xml version="1.0"?>

<PropertyList>

	<path>redlight.ac</path>
	
	<!-- Lumière rouge à l'extrémité de l'aile droite. -->
	
	<animation>
		<type>noshadow</type>
		<object-name>RedLight</object-name>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>RedLight</object-name>
		<condition>
			<property>/sim/model/lights/redlight/state</property>
		</condition>
	</animation>
		
	<animation>
		<type>billboard</type>
		<object-name>RedLight</object-name>
		<spherical type="bool">true</spherical>
	</animation>
	

</PropertyList>

